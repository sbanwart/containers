FROM registry.fedoraproject.org/fedora-minimal:43

LABEL maintainer="sbanwart@acm.org"
LABEL version="1.8.2"
LABEL description="A container for running the curlie HTTP tool. https://curlie.io"

RUN microdnf update -y && \
    microdnf install -y shadow-utils
        
RUN curl -Lo curlie.rpm https://github.com/rs/curlie/releases/download/v1.8.2/curlie_1.8.2_linux_amd64.rpm && \
    rpm -i curlie.rpm && \
    mkdir -p /data

RUN useradd curlie

WORKDIR /data

USER curlie

ENTRYPOINT [ "curlie" ]
CMD ["--help"]
